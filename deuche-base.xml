<?xml version="1.0"?>


<PropertyList>

  <sim include="Nasal/views.xml">

    <description>2 chevaux Citroen</description>
    <author>BARANGER Emmanuel (3D), Detlef Faber (FDM))</author>
    <status>alpha</status>

    <startup>
      <splash-texture>Aircraft/Deuche/deuche-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Deuche/Models/deuche.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
      <crew>
         <pilot>
           <visible type="int">1</visible>
         </pilot>
      </crew>
    </model> 

    <sound>
      <path>Aircraft/Deuche/Sounds/deuche-sound.xml</path>
    </sound>

    <walker>
      <outside type="bool">false</outside>
      <walking type="bool">false</walking>
      <speed type="double">0.000006</speed>
      <latitude-deg type="double">0.0</latitude-deg>
      <longitude-deg type="double">0.0</longitude-deg>
      <altitude-ft type="double">0.0</altitude-ft>
      <heading-deg type="double">0.0</heading-deg>
      <pitch-deg type="double">0.0</pitch-deg>
      <roll-deg type="double">0.0</roll-deg>
    </walker>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int" n="0">0</int>
        <int type="int" n="1">0</int>
        <int type="int" n="2">0</int>
        <int type="int" n="3">0</int>
        <int type="int" n="4">0</int>
        <int type="int" n="5">0</int>
      </generic>
    </multiplay>

    <help>
      <key>
        <name>,</name>
        <desc>Brakes</desc>
      </key>
      <key>
        <name>.</name>
        <desc>Accelerator</desc>
      </key>
      <key>
        <name>o</name>
        <desc>Walker gets outside</desc>
      </key>
      <key>
        <name>o</name>
        <desc>Walker gets back in</desc>
      </key>
      <key>
        <name>w</name>
        <desc>Walk forward while in Walk View</desc>
      </key>
    </help>

    <menubar include="Dialogs/deuche-menu.xml"/>

  </sim>

  <input>
    <keyboard include="Nasal/deuche-keyboard.xml"/>
  </input>
 
  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <controls>
    <engines>
       <engine n="0">
         <magnetos>3</magnetos>
       </engine>
    </engines>
    <gear>
      <screen type="bool">false</screen>
      <roof type="bool">false</roof>
    </gear>
  </controls>

  <input>
    <keyboard>
      <key n="77"> 
        <name>M</name>
        <desc>engage Reverse</desc>
        <binding> 
          <command>property-assign</command>
          <property>controls/engines/engine[0]/mixture</property>
          <value type="double">0.0</value>
        </binding>
      </key>
      <key n="109"> 
        <name>m</name>
        <desc>disengage Reverse</desc>
        <binding> 
          <command>property-assign</command>
          <property>controls/engines/engine[0]/mixture</property>
          <value type="double">1.0</value>
        </binding>
      </key>
      <key n="111"> 
        <name>o</name>
        <desc>get Walker out</desc>
        <binding> 
          <command>nasal</command>
        <script>walk.get_out();</script>
        </binding>
      </key>
      <key n="79"> 
        <name>O</name>
        <desc>get Walker in</desc>
        <binding> 
          <command>nasal</command>
        <script>walk.get_in();</script>
        </binding>
      </key>
      <key n="119"> 
        <name>w</name>
        <desc>walk forward</desc>
        <binding n="0"> 
          <command>property-toggle</command>
          <property>/sim/walker/walking</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>/sim/walker/walking</property>
          </binding>
        </mod-up>
      </key>
    </keyboard>
  </input>

  <nasal>
    <deuche>
      <file>Aircraft/Deuche/Nasal/doors.nas</file>
      <file>Aircraft/Deuche/Nasal/liveries.nas</file>
      <file>Aircraft/Deuche/Nasal/immat.nas</file>
    </deuche>
    <walk>
      <file>Aircraft/Deuche/Nasal/walk.nas</file>
      <script>main_loop();</script>
    </walk>
  </nasal>

</PropertyList>




